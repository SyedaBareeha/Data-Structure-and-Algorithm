#include <iostream>
using namespace std;

int main() {
    int arr[5] = {20, 30, 40, 50, 60};
    int start = 0;
    int end = 4;
    int mid;
    int target;

    cout << "Enter number to search: ";
    cin >> target;

    bool found = false;

    while (start <= end) {
        mid = (start + end) / 2;

        if (arr[mid] == target) {
            cout << "Target found at index " << mid << endl;
            found = true;
            break; // Stop the loop if found
        }
        else if (arr[mid] < target) {
            start = mid + 1; // Go right
        }
        else {
            end = mid - 1;   // Go left
        }
    }

    if (!found) {
        cout << "Target not found" << endl;
    }

    return 0;
}
